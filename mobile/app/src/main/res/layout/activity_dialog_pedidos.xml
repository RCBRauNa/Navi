<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pedidos_comprador"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/materiais"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/Branco"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tv_nr_pedido"
                    android:textSize="24sp"
                    android:textColor="@color/AzulNavi"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/dialog_nr_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:textColor="@color/AzulNavi"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tv_desc"
                    android:textSize="18sp"
                    android:textColor="@color/AzulBg"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/dialog_pedido_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="18sp"
                    android:textColor="@color/Preto"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tv_anot"
                    android:textSize="18sp"
                    android:textColor="@color/AzulBg"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/dialog_pedido_anotacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="18sp"
                    android:textColor="@color/Preto"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tv_preco"
                    android:textSize="18sp"
                    android:textColor="@color/AzulBg"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/dialog_pedido_preco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="18sp"
                    android:textColor="@color/Preto"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tv_estado"
                    android:textSize="18sp"
                    android:textColor="@color/AzulBg"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/dialog_pedido_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="18sp"
                    android:textColor="@color/Preto"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>