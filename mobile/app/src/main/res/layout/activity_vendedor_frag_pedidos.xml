<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page">

    <RelativeLayout
        android:id="@+id/rl_criar_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/AzulBg"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/bt_criar_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_border_outline"
            android:text="@string/str_bt_criar_pedido"
            android:textColor="@color/AzulNavi"
            android:onClick="showFormPedido"/>

        <LinearLayout
            android:id="@+id/rl_form_pedido"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_border"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_bt_criar_pedido"
                android:textSize="25sp"
                android:textColor="@color/AzulNavi"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_border"
                android:hint="@string/str_et_hint_descricao" />

        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/rl_criar_pedido">

        <LinearLayout
            android:id="@+id/content_pedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tab_em_andamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Branco"
                android:padding="5dp"
                android:onClick="tabPedidoEmAndamento">
                <ImageView
                    android:id="@+id/icon_tab_em_andamento"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_tab_open"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/str_tv_em_andamento"
                    android:textSize="20sp"
                    android:textColor="@color/AzulNavi"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pedido_em_andamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>